---
// src/layouts/MyHomeLayout.astro
import MyHomeLayout from '~/layouts/MyLayout.astro';
import '../assets/styles/tailwind.css';
const { title = "My Social Resume" } = Astro.props;
---

<!doctype html>
<html lang="zh-TW" class="h-full bg-gray-100">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="h-full overflow-hidden text-gray-900 antialiased">
		
		<div class="flex h-screen w-full flex-col">
			
			<header class="h-16 flex-none border-b bg-white shadow-sm z-10 flex items-center px-4">
				Header 區塊
			</header>

			<div class="flex flex-1 overflow-hidden">
				
				<aside class="hidden w-64 overflow-y-auto border-r bg-gray-50 md:block">
					左側選單 (Sidebar Left)
				</aside>

				<main class="flex-1 overflow-y-auto bg-white p-4">
					<slot />
				</main>

				<aside class="hidden w-80 overflow-y-auto border-l bg-gray-50 lg:block">
					右側好友/技能 (Sidebar Right)
				</aside>

			</div>
		</div>

	</body>
</html>