---

<header class="h-14 bg-white shadow-sm fixed top-0 inset-x-0 z-40 flex items-center justify-between px-4 select-none">
    
    <div class="flex items-center gap-2 lg:gap-3 w-1/4">
        <div class="w-10 h-10 rounded-full overflow-hidden border border-gray-200 cursor-pointer hover:opacity-90 transition transform translate-z-0 flex-shrink-0">
        <img 
            src="/facebook.png" 
            alt="Logo" 
            class="w-full h-full object-cover"
        />
    </div>

        <div class="hidden xl:flex items-center bg-gray-100 rounded-full px-3 h-10 w-64 group focus-within:ring-1 focus-within:ring-blue-500 transition-shadow cursor-not-allowed opacity-70">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500 group-focus-within:hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <input 
                type="text" 
                placeholder="ÊêúÂ∞ã" 
                class="bg-transparent border-none focus:ring-0 text-[15px] ml-2 w-full text-gray-700 placeholder-gray-500 outline-none cursor-not-allowed"
                disabled
            />
        </div>
        
        <div class="xl:hidden w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center text-gray-600 cursor-pointer hover:bg-gray-200">
             <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
        </div>
    </div>

    <div class="hidden md:flex flex-1 justify-center max-w-xl h-full">
    <div class="flex w-full justify-between h-full space-x-1">
        {navItems.map((item) => {
            const active = isActive(item.id); // Ë®àÁÆóÁãÄÊÖã
            return (
                <a href={item.href} class="relative group flex-1 flex justify-center items-center cursor-pointer h-full">
                    
                    <div class="absolute top-14 bg-gray-800 text-white text-xs px-2 py-1 rounded opacity-0 group-hover:opacity-80 transition-opacity pointer-events-none delay-500 whitespace-nowrap z-50">
                        {item.name}
                    </div>

                    <div class={`w-full h-[90%] my-1 rounded-lg flex items-center justify-center transition-colors 
                        ${active ? 'text-blue-600' : 'text-gray-500 hover:bg-gray-100'}`}>
                        <svg xmlns="http://www.w3.org/2000/svg" class={`h-7 w-7 ${active ? 'fill-current' : ''}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width={active ? 2 : 1.5}>
                            <path stroke-linecap="round" stroke-linejoin="round" d={item.iconPath} />
                        </svg>
                    </div>

                    {active && (
                        <div class="absolute bottom-0 h-[3px] w-full bg-blue-600 rounded-t-sm"></div>
                    )}
                </a>
            )
        })}
    </div>
</div>

    <div class="flex items-center justify-end gap-2 lg:gap-3 w-1/4">
        
        <div class="hidden lg:flex w-10 h-10 bg-gray-100 hover:bg-gray-200 rounded-full items-center justify-center cursor-pointer text-gray-900">
             <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path d="M5 3a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2V5a2 2 0 00-2-2H5zM5 11a2 2 0 00-2 2v2a2 2 0 002 2h2a2 2 0 002-2v-2a2 2 0 00-2-2H5zM11 5a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V5zM11 13a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
            </svg>
        </div>

        <div class="relative">
            <button 
                id="header-noti-btn"
                class={`w-10 h-10 rounded-full flex items-center justify-center transition-colors 
                ${unreadCount > 0 ? 'bg-blue-50 text-blue-600 hover:bg-blue-100' : 'bg-gray-100 text-gray-900 hover:bg-gray-200'}`}
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12.02 2.909c-.375-1.7-2.838-1.705-3.218.004-1.286.7-2.355 1.666-2.916 2.916-1.55 3.447-1.12 7.037.26 10.334.338.8.766 1.56 1.258 2.275a.808.808 0 001.216.096l.574-.573a.804.804 0 011.138 0l.574.573a.808.808 0 001.216-.096c.492-.715.92-1.475 1.258-2.275 1.38-3.297 1.81-6.887.26-10.334-.56-1.25-1.63-2.216-2.916-2.916zm-5.69 16.591a2.802 2.802 0 114.656 2.798 2.802 2.802 0 01-4.656-2.798z" />
                </svg>
                {unreadCount > 0 && (
                    <span class="absolute -top-1 -right-1 flex h-5 w-5 items-center justify-center rounded-full bg-red-500 text-[11px] font-bold text-white border-2 border-white">
                        {unreadCount}
                    </span>
                )}
            </button>
            
            <div id="header-noti-dropdown" class="hidden absolute right-0 mt-3 w-96 bg-white rounded-lg shadow-xl border border-gray-100 overflow-hidden z-50 p-2">
                 <div class="px-2 py-2 mb-2">
                    <h3 class="font-bold text-xl">ÈÄöÁü•</h3>
                </div>
                <div class="space-y-1">
                     {myNotifications.map((note) => (
                        <div class="flex items-center gap-3 p-2 hover:bg-gray-100 rounded-lg cursor-pointer">
                             <div class="w-14 h-14 rounded-full bg-blue-100 flex items-center justify-center text-2xl flex-shrink-0">
                                {note.avatar}
                             </div>
                             <div class="flex-1">
                                <p class="text-sm text-gray-900 leading-snug">
                                    {note.text}
                                </p>
                                <p class="text-xs text-blue-600 font-bold mt-1">{note.time}</p>
                             </div>
                             {note.isUnread && <div class="w-3 h-3 bg-blue-500 rounded-full"></div>}
                        </div>
                    ))}
                </div>
            </div>
        </div>

        <div class="relative cursor-pointer">
            <img 
                src={myProfile.avatar} 
                alt="Profile" 
                class="w-10 h-10 rounded-full border border-gray-200 object-cover hover:opacity-90"
            />
            <div class="absolute -bottom-1 -right-1 w-4 h-4 bg-gray-100 rounded-full flex items-center justify-center border border-white">
                 <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 text-gray-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M19 9l-7 7-7-7" />
                </svg>
            </div>
        </div>
        
    </div>
</header>

<script>
    const notiBtn = document.getElementById('header-noti-btn');
    const notiDropdown = document.getElementById('header-noti-dropdown');

    notiBtn?.addEventListener('click', (e) => {
        e.stopPropagation();
        notiDropdown?.classList.toggle('hidden');
    });

    document.addEventListener('click', (e) => {
        if (notiDropdown && !notiBtn?.contains(e.target as Node) && !notiDropdown.contains(e.target as Node)) {
            notiDropdown.classList.add('hidden');
        }
    });
</script>