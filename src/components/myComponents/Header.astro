    return pathName.startsWith(`/${id}`);
};

// Ë®àÁÆóÊú™ËÆÄÊï∏Èáè
const unreadCount = myNotifications.filter(n => n.isUnread).length;

// ÂÆöÁæ©‰∏≠ÈñìÁöÑÂ∞éËà™ÈÅ∏ÂñÆ 
const navItems = [
    { 
        id: 'home', 
