        name: 'work display', 
        href: '/work',
        // üíª Code/Terminal Icon (‰ª£Ë°® Project)
        iconPath: 'M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4' 
    },
    { 
        id: 'activity', 
        name: 'activities paticipation', 
        href: '/activities',
        // üìÖ Calendar/Event Icon (‰ª£Ë°®ÂèÉÂä†ÈÅéÁöÑÊ¥ªÂãï)
        iconPath: 'M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z' 
    }
