---
import type { Post, PreviewLink } from "~/data/myData";
import { myProfile } from "~/data/myData";

interface Props {
  post: Post;
}

const { post } = Astro.props;

// åˆ¤æ–·æ˜¯å¦ç‚ºç´”åœ–ç‰‡
const isSimpleImage = typeof post.imageOrLink === 'string';
const linkData = !isSimpleImage ? (post.imageOrLink as PreviewLink) : null;
---

<div class="feed-post bg-white rounded-lg shadow-sm border border-gray-200 mb-4 font-sans overflow-hidden max-w-full" data-post-id={post.id}>
    
    <div class="px-4 py-3 flex items-center gap-2">
        <img src={myProfile.avatar} class="w-10 h-10 rounded-full border border-gray-200 object-cover flex-shrink-0" />
        <div class="min-w-0 flex-1">
            <h4 class="font-bold text-[15px] text-gray-900 leading-snug cursor-pointer hover:underline truncate">
                {post.name}
            </h4>
            <span class="text-gray-500 text-[13px] cursor-pointer hover:underline block">å‰›å‰› Â· ğŸŒ</span>
        </div>
        
        <button class="p-2 hover:bg-gray-100 rounded-full transition-colors text-gray-500">
             <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 10c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm0-6c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm0 12c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z"/></svg>
        </button>
    </div>

    <div class="px-4 pb-3">
        <p class="text-[15px] text-gray-900 whitespace-pre-line leading-normal break-words">
            {post.description}
        </p>
    </div>

    {isSimpleImage ? (
        // Case A: ç´”åœ–ç‰‡
        <div class="w-full border-t border-b border-gray-100 cursor-pointer overflow-hidden bg-gray-50">
            <img src={post.imageOrLink as string} class="w-full h-auto object-contain max-h-[500px]" loading="lazy" />
        </div>
    ) : (
        // Case B: é€£çµé è¦½åœ–
        <a 
            href={linkData?.url} 
            target="_blank" 
            class="block w-full border-t border-b border-gray-200 hover:opacity-95 transition-opacity bg-gray-50"
        >
            <div class="w-full aspect-[1.91/1] overflow-hidden bg-gray-100 relative">
                <img 
                    src={linkData?.imagePath} 
                    class="w-full h-full object-cover" 
                    loading="lazy"
                />
            </div>
        </a>
    )}

    <div class="px-4 py-2">
        
        <div class="flex items-center gap-1.5 text-gray-500 text-[15px] mb-2">
            <div class="w-5 h-5 bg-blue-500 rounded-full flex items-center justify-center p-1 flex-shrink-0 z-10 border border-white">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3 fill-white" viewBox="0 0 24 24">
                    <path d="M1 21h4V9H1v12zm22-11c0-1.1-.9-2-2-2h-6.31l.95-4.57.03-.32c0-.41-.17-.79-.44-1.06L14.17 1 7.59 7.59C7.22 7.95 7 8.45 7 9v10c0 1.1.9 2 2 2h9c.83 0 1.54-.5 1.84-1.22l3.02-7.05c.09-.23.14-.47.14-.73v-2z"/>
                </svg>
            </div>
            
            <span class="like-count hover:underline cursor-pointer ml-0.5">{post.likes}</span>
        </div>

        <div class="border-t border-gray-200 pt-1 flex">
            <button 
                class="like-btn flex-1 flex items-center justify-center gap-2 py-1.5 rounded-md transition-colors text-gray-600 font-semibold text-[15px] hover:bg-gray-100 group" 
                data-liked="false"
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 icon-outline group-active:scale-95 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
                </svg>
                
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 icon-solid hidden fill-blue-600 stroke-blue-600 group-active:scale-95 transition-transform" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
                </svg>
                
                <span>è®š</span>
            </button>
            
            <button class="flex-1 flex items-center justify-center gap-2 py-1.5 text-gray-600 font-semibold text-[15px] hover:bg-gray-100 rounded-md">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" /></svg>
                ç•™è¨€
            </button>
            
            <button class="flex-1 flex items-center justify-center gap-2 py-1.5 text-gray-600 font-semibold text-[15px] hover:bg-gray-100 rounded-md">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" /></svg>
                åˆ†äº«
            </button>
        </div>
    </div>
</div>

<script>
    const posts = document.querySelectorAll('.feed-post');
    posts.forEach(post => {
        const btn = post.querySelector('.like-btn');
        const countSpan = post.querySelector('.like-count');
        const iconOutline = post.querySelector('.icon-outline');
        const iconSolid = post.querySelector('.icon-solid');

        if(btn && countSpan && iconOutline && iconSolid) {
            btn.addEventListener('click', () => {
                const isLiked = btn.getAttribute('data-liked') === 'true';
                const newState = !isLiked;
                btn.setAttribute('data-liked', String(newState));
                let currentCount = parseInt(countSpan.textContent || '0');

                if (newState) {
                    countSpan.textContent = (currentCount + 1).toString();
                    btn.classList.add('text-blue-600');
                    btn.classList.remove('text-gray-600');
                    iconOutline.classList.add('hidden');
                    iconSolid.classList.remove('hidden');
                    // é»æ“Šæ™‚çš„å°å‹•ç•«
                    btn.classList.add('scale-110');
                    setTimeout(() => btn.classList.remove('scale-110'), 200);
                } else {
                    countSpan.textContent = (currentCount - 1).toString();
                    btn.classList.remove('text-blue-600');
                    btn.classList.add('text-gray-600');
                    iconOutline.classList.remove('hidden');
                    iconSolid.classList.add('hidden');
                }
            });
        }
    });
</script>