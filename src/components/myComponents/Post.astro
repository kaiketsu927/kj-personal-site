---
import type { Post, PreviewLink } from "~/data/myData";
import { myProfile } from "~/data/myData";

interface Props {
  post: Post;
}

const { post } = Astro.props;

// åˆ¤æ–·æ˜¯å¦ç‚ºç´”åœ–ç‰‡
const isSimpleImage = typeof post.imageOrLink === 'string';
const linkData = !isSimpleImage ? (post.imageOrLink as PreviewLink) : null;

/**
 * ğŸ”¥ ç°¡åŒ–ç‰ˆçš„æ™‚é–“é‚è¼¯
 * 1. æ˜¯åŒä¸€å¤© -> [ä»Šå¤©]
