---
import SocialPageLayout from '~/components/myComponents/SocialPageLayout.astro';
import Post from '~/components/myComponents/Post.astro';
import { allPosts } from '~/data/myData';

// 篩選類別
const posts = allPosts.filter(p => p.category === 'communities');
---

<SocialPageLayout title="Communities | Social Resume">
    {posts.map((post) => (
        <Post post={post} />
    ))}
</SocialPageLayout>