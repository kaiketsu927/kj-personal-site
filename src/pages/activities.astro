---
import SocialPageLayout from '~/components/myComponents/SocialPageLayout.astro';
import Post from '~/components/myComponents/Post.astro';
import { allPosts } from '~/data/myData';

// 篩選類別
const pinnedPosts = allPosts.filter(p => p.category === 'activities'&& p.isPinned===true);
const normalPosts = allPosts.filter(p => p.category === 'activities'&& p.isPinned===false);
---

<SocialPageLayout title="Activities | KJ's Personal Site">
    {pinnedPosts.map((post) => (
        <Post post={post} />
    ))}
    {normalPosts.map((post) => (
        <Post post={post} />
    ))}
</SocialPageLayout>